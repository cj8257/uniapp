.container{padding:20rpx;position:relative}.container .watermark{position:fixed;top:50%;left:50%;transform:translate(-50%,-50%) rotate(-45deg);font-size:60rpx;color:rgba(0,0,0,.1);pointer-events:none;z-index:1}.container .device-list{position:relative;z-index:2}.container .device-list .device-item{display:flex;background-color:#fff;padding:20rpx;margin-bottom:20rpx;border-radius:12rpx;box-shadow:0 2rpx 10rpx rgba(0,0,0,.1);position:relative;overflow:hidden}.container .device-list .device-item.normal{background-color:#f6ffed;border:2rpx solid #52C41A}.container .device-list .device-item.normal:before{content:"";position:absolute;top:0;left:0;right:0;bottom:0;background:linear-gradient(45deg,rgba(82,196,26,.1),rgba(82,196,26,.2));z-index:0}.container .device-list .device-item.overdue{background-color:#fff1f0;border:2rpx solid #FF4D4F;animation:pulse 2s infinite}.container .device-list .device-item.overdue:before{content:"";position:absolute;top:0;left:0;right:0;bottom:0;background:linear-gradient(45deg,rgba(255,77,79,.1),rgba(255,77,79,.2));z-index:0}.container .device-list .device-item .device-image{width:160rpx;height:160rpx;border-radius:8rpx;margin-right:20rpx;position:relative;z-index:1}.container .device-list .device-item .device-info{flex:1;display:flex;flex-direction:column;justify-content:space-between;position:relative;z-index:1}.container .device-list .device-item .device-info .device-header{display:flex;justify-content:space-between;align-items:center}.container .device-list .device-item .device-info .device-header .device-name{font-size:32rpx;font-weight:700;color:#333}.container .device-list .device-item .device-info .device-header .device-code{font-size:24rpx;color:#666}.container .device-list .device-item .device-info .date-info{display:flex;flex-direction:column}.container .device-list .device-item .device-info .date-info text{font-size:24rpx;color:#666;margin-top:10rpx}.container .device-list .device-item .device-info .date-info .overdue-text{color:#ff4d4f;font-weight:700;font-size:28rpx;margin-top:15rpx}@keyframes pulse{0%{box-shadow:0 0 rgba(255,77,79,.4)}70%{box-shadow:0 0 0 10rpx rgba(255,77,79,0)}to{box-shadow:0 0 rgba(255,77,79,0)}}
