.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}
.container .login-box {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}
.container .login-box .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 20rpx;
}
.container .login-box .subtitle {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 60rpx;
}
.container .login-box .form-box {
  margin-bottom: 40rpx;
}
.container .login-box .form-box .form-item {
  margin-bottom: 30rpx;
}
.container .login-box .form-box .form-item .input {
  width: 100%;
  height: 80rpx;
  background: #F8F8F8;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.container .login-box .form-box .remember-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.container .login-box .form-box .remember-box .remember-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 4rpx;
}
.container .login-box .form-box .remember-box .forget-text {
  font-size: 26rpx;
  color: #2d8cf0;
}
.container .login-box .form-box .login-btn {
  width: 100%;
  height: 80rpx;
  background: #2d8cf0;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container .login-box .status-tip {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}
.container .login-box .status-tip.error {
  color: #FF4D4F;
}