.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 20rpx;
}
.container .form-box {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx;
}
.container .form-box .form-item {
  margin-bottom: 30rpx;
}
.container .form-box .form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}
.container .form-box .form-item .input {
  width: 100%;
  height: 80rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.container .form-box .form-item .picker {
  width: 100%;
  height: 80rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  padding: 0 20rpx;
}
.container .form-box .form-item .picker .picker-text {
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333333;
}
.container .form-box .form-item .textarea {
  width: 100%;
  height: 200rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}
.container .form-box .form-item .image-upload {
  width: 200rpx;
  height: 200rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.container .form-box .form-item .image-upload .preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.container .form-box .form-item .image-upload .upload-placeholder {
  text-align: center;
}
.container .form-box .form-item .image-upload .upload-placeholder .iconfont {
  font-size: 48rpx;
  color: #999999;
  margin-bottom: 10rpx;
}
.container .form-box .form-item .image-upload .upload-placeholder text {
  font-size: 24rpx;
  color: #999999;
}
.container .form-box .form-item .radio-group {
  display: flex;
  flex-wrap: wrap;
}
.container .form-box .form-item .radio-group .radio-label {
  margin-right: 40rpx;
  margin-bottom: 20rpx;
}
.container .form-box .form-item .radio-group .radio-label text {
  font-size: 28rpx;
  color: #333333;
}
.container .button-group {
  margin-top: 40rpx;
  padding: 0 20rpx;
}
.container .button-group .submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #007AFF;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}