.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 20rpx;
}
.container .search-section {
  margin-bottom: 20rpx;
}
.container .search-section .search-box {
  position: relative;
  background-color: #FFFFFF;
  border-radius: 30rpx;
  padding: 0 30rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}
.container .search-section .search-box .icon-search {
  font-size: 32rpx;
  color: #999;
  margin-right: 10rpx;
}
.container .search-section .search-box input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}
.container .search-section .search-box .clear-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}
.container .statistics {
  display: flex;
  justify-content: space-between;
  background-color: #FFFFFF;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.container .statistics .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .statistics .stat-item .stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}
.container .statistics .stat-item .stat-number.warning {
  color: #FF4D4F;
}
.container .statistics .stat-item .stat-label {
  font-size: 24rpx;
  color: #666666;
}
.container .filter-section {
  display: flex;
  justify-content: space-between;
  background-color: #FFFFFF;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.container .filter-section .filter-item {
  flex: 1;
  margin: 0 10rpx;
}
.container .filter-section .filter-item .label {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 10rpx;
}
.container .filter-section .filter-item .picker {
  height: 60rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  padding: 0 20rpx;
}
.container .filter-section .filter-item .picker .picker-text {
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333333;
}
.container .device-list .device-item {
  position: relative;
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.container .device-list .device-item .overdue-watermark,
.container .device-list .device-item .available-watermark,
.container .device-list .device-item .borrowed-watermark {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(-45deg);
  font-size: 80rpx;
  font-weight: bold;
  z-index: 1;
  pointer-events: none;
}
.container .device-list .device-item .overdue-watermark {
  color: rgba(255, 77, 79, 0.2);
}
.container .device-list .device-item .available-watermark {
  color: rgba(82, 196, 26, 0.2);
}
.container .device-list .device-item .borrowed-watermark {
  color: rgba(250, 140, 22, 0.2);
}
.container .device-list .device-item.overdue .device-content {
  background-color: #FFE6E6;
  border: 2rpx solid #FF4D4F;
  position: relative;
}
.container .device-list .device-item.overdue .device-name,
.container .device-list .device-item.overdue .device-code,
.container .device-list .device-item.overdue .device-type,
.container .device-list .device-item.overdue .device-status,
.container .device-list .device-item.overdue .device-borrow text {
  color: #FF4D4F;
}
.container .device-list .device-item.overdue .device-status {
  background-color: #FF4D4F;
  color: #FFFFFF;
}
.container .device-list .device-item.available .device-content {
  background-color: #F6FFED;
  border: 2rpx solid #52C41A;
  position: relative;
}
.container .device-list .device-item.available .device-name,
.container .device-list .device-item.available .device-code,
.container .device-list .device-item.available .device-type,
.container .device-list .device-item.available .device-status,
.container .device-list .device-item.available .device-borrow text {
  color: #52C41A;
}
.container .device-list .device-item.available .device-status {
  background-color: #52C41A;
  color: #FFFFFF;
}
.container .device-list .device-item.borrowed .device-content {
  background-color: #FFF7E6;
  border: 2rpx solid #FA8C16;
  position: relative;
}
.container .device-list .device-item.borrowed .device-name,
.container .device-list .device-item.borrowed .device-code,
.container .device-list .device-item.borrowed .device-type,
.container .device-list .device-item.borrowed .device-status,
.container .device-list .device-item.borrowed .device-borrow text {
  color: #FA8C16;
}
.container .device-list .device-item.borrowed .device-status {
  background-color: #FA8C16;
  color: #FFFFFF;
}
.container .device-list .device-item .device-content {
  background-color: #FFFFFF;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: transform 0.3s;
  display: flex;
  position: relative;
  z-index: 2;
  transform: translateX(0);
}
.container .device-list .device-item .device-content .device-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.container .device-list .device-item .device-content .device-info {
  flex: 1;
}
.container .device-list .device-item .device-content .device-info .device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.container .device-list .device-item .device-content .device-info .device-header .device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.container .device-list .device-item .device-content .device-info .device-header .device-code {
  font-size: 24rpx;
  color: #999999;
}
.container .device-list .device-item .device-content .device-info .device-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.container .device-list .device-item .device-content .device-info .device-detail .device-type {
  font-size: 24rpx;
  color: #666666;
}
.container .device-list .device-item .device-content .device-info .device-detail .device-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}
.container .device-list .device-item .device-content .device-info .device-detail .device-status.available {
  background-color: #F6FFED;
  color: #52C41A;
}
.container .device-list .device-item .device-content .device-info .device-detail .device-status.borrowed {
  background-color: #E6F7FF;
  color: #1890FF;
}
.container .device-list .device-item .device-content .device-info .device-detail .device-status.maintenance {
  background-color: #FFF7E6;
  color: #FA8C16;
}
.container .device-list .device-item .device-content .device-info .device-detail .device-status.scrapped {
  background-color: #FFF1F0;
  color: #FF4D4F;
}
.container .device-list .device-item .device-content .device-info .device-borrow {
  display: flex;
  flex-direction: column;
}
.container .device-list .device-item .device-content .device-info .device-borrow text {
  font-size: 24rpx;
  color: #666666;
  margin-top: 6rpx;
}
.container .device-list .device-item .delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 120rpx;
  height: 100%;
  background-color: #FF4D4F;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
  opacity: 0;
  transition: opacity 0.3s;
}
.container .device-list .device-item .delete-btn text {
  color: #FFFFFF;
  font-size: 28rpx;
}
.container .device-list .device-item .edit-btn {
  position: absolute;
  right: 120rpx;
  top: 0;
  width: 120rpx;
  height: 100%;
  background-color: #1890FF;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
  opacity: 0;
  transition: opacity 0.3s;
}
.container .device-list .device-item .edit-btn text {
  color: #FFFFFF;
  font-size: 28rpx;
}
.container .device-list .device-item.slide-active .device-content {
  transform: translateX(-240rpx);
}
.container .device-list .device-item.slide-active .delete-btn,
.container .device-list .device-item.slide-active .edit-btn {
  opacity: 1;
}
.container .empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}
.container .empty-tip .empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.container .empty-tip text {
  font-size: 28rpx;
  color: #999999;
}