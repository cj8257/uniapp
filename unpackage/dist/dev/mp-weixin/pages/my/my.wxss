.container {
  min-height: 100vh;
  background-color: #F5F5F5;
}
.container .user-info {
  background-color: #FFFFFF;
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.container .user-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}
.container .user-info .info .nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  display: block;
}
.container .user-info .info .department {
  font-size: 28rpx;
  color: #666666;
  margin-top: 10rpx;
  display: block;
}
.container .user-info .login-btn {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container .user-info .login-btn text {
  font-size: 32rpx;
  color: #007AFF;
}
.container .menu-list {
  background-color: #FFFFFF;
}
.container .menu-list .admin-section {
  margin-bottom: 20rpx;
}
.container .menu-list .admin-section .section-title {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #999999;
  background-color: #F5F5F5;
}
.container .menu-list .menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.container .menu-list .menu-item text {
  font-size: 30rpx;
  color: #333333;
}
.container .menu-list .menu-item .arrow {
  color: #999999;
}
.container .menu-list .menu-item:last-child {
  border-bottom: none;
}